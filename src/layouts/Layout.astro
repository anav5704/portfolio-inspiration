---
interface Props {
    title: string;
    description?: string;
    canonicalPath?: string;
    preconnectOrigin?: string;
    ogType?: string;
}

const SITE_NAME = "Portfolio Inspiration";
const SITE_URL = "https://portfolios.anav.dev";

const {
    title,
    description = "Browse and preview 1,500+ developer portfolio websites. Filter by TLD, role, or technology and find portfolio inspiration for your next project.",
    canonicalPath,
    preconnectOrigin,
    ogType = "website",
} = Astro.props;

const canonicalURL = canonicalPath
    ? `${SITE_URL}${canonicalPath}`
    : `${SITE_URL}${Astro.url.pathname}`;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- Primary SEO -->
        <title>{title}</title>
        <meta name="description" content={description} />
        <link rel="canonical" href={canonicalURL} />
        {
            preconnectOrigin && (
                <>
                    <link rel="dns-prefetch" href={preconnectOrigin} />
                    <link
                        rel="preconnect"
                        href={preconnectOrigin}
                        crossorigin="anonymous"
                    />
                </>
            )
        }
        <meta name="robots" content="index, follow" />

        <!-- Open Graph -->
        <meta property="og:type" content={ogType} />
        <meta property="og:site_name" content={SITE_NAME} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:locale" content="en_US" />

        <!-- Twitter Card -->
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />

        <!-- Favicon -->
        <link
            rel="icon"
            type="image/svg+xml"
            href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32'><text y='28' font-size='28'>â—†</text></svg>"
        />

        <!-- JSON-LD Structured Data -->
        <script
            type="application/ld+json"
            set:html={JSON.stringify({
                "@context": "https://schema.org",
                "@type": "WebSite",
                name: SITE_NAME,
                url: SITE_URL,
                description:
                    "Browse and preview 1,500+ developer portfolio websites. Filter by TLD, role, or technology and find portfolio inspiration.",
                potentialAction: {
                    "@type": "SearchAction",
                    target: `${SITE_URL}/?q={search_term_string}`,
                    "query-input": "required name=search_term_string",
                },
            })}
        />

        <!-- Umami Analytics -->
        <script
            defer
            data-domains="portfolios.anav.dev"
            src="https://cloud.umami.is/script.js"
            data-website-id="e5656227-72cc-452d-bef4-66f90d230582"></script>
    </head>
    <body>
        <slot />
    </body>
</html>

<style is:global>
    *,
    *::before,
    *::after {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    :root {
        --bg: #f8fafc;
        --bg-card: #ffffff;
        --text: #0f172a;
        --text-muted: #64748b;
        --border: #e2e8f0;
        --border-hover: #94a3b8;
        --radius: 10px;
        --radius-sm: 6px;
        --accent: #3b82f6;
        --accent-hover: #2563eb;
    }

    body {
        font-family:
            -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
            "Helvetica Neue", Arial, sans-serif;
        font-size: 1.125rem;
        background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
        color: var(--text);
        line-height: 1.5;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        min-height: 100vh;
    }

    a {
        color: inherit;
        text-decoration: none;
    }

    button {
        font-family: inherit;
        cursor: pointer;
    }

    /* Refinements to specific components from index.astro */
    @media (min-width: 769px) {
        .sidebar {
            width: 280px !important;
            min-width: 280px !important;
        }
    }

    .sidebar {
        background: rgba(255, 255, 255, 0.75) !important;
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
    }

    .preview {
        background: transparent !important;
    }

    .site-item {
        transition: all 0.2s ease !important;
    }

    .site-item:hover {
        background: rgba(255, 255, 255, 0.9) !important;
        transform: translateX(4px);
    }

    .toolbar-btn,
    .action-btn,
    .filter-btn {
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1) !important;
    }

    .toolbar-btn:hover,
    .action-btn:hover,
    .filter-btn:hover {
        background: #ffffff !important;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
        border-color: var(--border-hover) !important;
        transform: translateY(-1px);
    }
</style>
